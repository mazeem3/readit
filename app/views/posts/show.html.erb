
<% if @post.errors.any? %>
<div class="alert alert-danger" role="alert">
    <% @post.errors.full_messages.each do |msg| %>
    <%= msg %><br>
    <% end %>
</div>
<% end %>
<div class="container">

    <div class="row post">
        <div class="col-xs-12">
            <h1><%= link_to @post.title, "http://#{@post.url}" %></h1>
        </div>
    </div>

    <%= form_for @comment, url: create_comment_path do |f| %>

    <div class="form-group">
        <%= f.label :body %>
        <%= f.text_field :body,class: "form-control input-normal"  %><br>
    </div>

    <div class="form-group">
        <%= f.label :author %>
        <%= f.text_field :author,class: "form-control" %><br>
    </div>

    <div class="form-group">
        <%= f.submit class: "btn btn-lg btn-primary" %>
    </div>
    <% end %>

    <br>
    <% @post.comments.each do |comment| %>
    <% if comment.body.present? %>
    <div class="well">
        <%end %>
        <%end %>
        <% @post.comments.reverse.each do |comment| %>
        <% if comment.body.present? %>
        <br>
        <%= comment.body %>
        <br>
        <span>
            <small>
                <em>
                    - posted
                    <%= time_ago_in_words(comment.created_at) %>
                    ago by
                    <% if comment.author.present? %>
                    <%= comment.author %>.
                    <% end %>
                    <%end %>
                </em>
            </small>
        </span>
        <hr>
        <% end %>
    </div>
</div>
